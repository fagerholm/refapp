<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<groupId>com.teoware.refapp</groupId>
	<artifactId>refapp.appserver</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>rafapp.appserver</name>
	<description>Appserver control</description>
	
	<!-- PROPERTIES -->
	<properties>
		<java.version>1.6</java.version>
		<source.encoding>UTF-8</source.encoding>
		
		<!-- Glassfish -->
		<glassfish.domain>domain1</glassfish.domain>
		<glassfish.host>localhost</glassfish.host>
		<glassfish.httpPort>8080</glassfish.httpPort>
		<glassfish.adminPort>4848</glassfish.adminPort>
		<glassfish.username>admin</glassfish.username>
		<glassfish.password>abcd1234</glassfish.password>
		<glassfish.passwordfile>${env.HOMEDRIVE}${env.HOMEPATH}\.asadminpass</glassfish.passwordfile>
		
		<!-- Plugins -->
		<version.maven-compiler-plugin>2.3.2</version.maven-compiler-plugin>
		<version.maven-glassfish-plugin>2.1</version.maven-glassfish-plugin>
		<version.asadmin-maven-plugin>0.9</version.asadmin-maven-plugin>
		
		<!-- Dependencies -->
	</properties>
	
	<modules>
		<module>refapp.appserver.glassfish</module>
	</modules>
	
	<!-- REPOSITORIES -->
	<repositories>
	</repositories>
	
	<!-- PLUGIN REPOSITORIES -->
	<pluginRepositories>
	</pluginRepositories>
	
	<!-- DEPENDENCIES -->
	<dependencyManagement>
		<dependencies>
		</dependencies>
	</dependencyManagement>
	
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>${version.maven-compiler-plugin}</version>
					<configuration>
						<source>${java.version}</source>
						<target>${java.version}</target>
						<encoding>${source.encoding}</encoding>
					</configuration>
				</plugin>
				
				<plugin>
					<groupId>org.glassfish.maven.plugin</groupId>
					<artifactId>maven-glassfish-plugin</artifactId>
					<version>${version.maven-glassfish-plugin}</version>
					<configuration>
						<user>${glassfish.username}</user>
						<adminPassword>${glassfish.password}</adminPassword>
						<domain>
							<name>${glassfish.domain}</name>
							<httpPort>${glassfish.httpPort}</httpPort>
							<adminPort>${glassfish.adminPort}</adminPort>
						</domain>
					</configuration>
				</plugin>
				
				<plugin>
					<groupId>org.codeartisans.asadmin</groupId>
					<artifactId>asadmin-maven-plugin</artifactId>
					<version>${version.asadmin-maven-plugin}</version>
					<configuration>
						<domain>${glassfish.domain}</domain>
						<host>${glassfish.host}</host>
						<port>${glassfish.adminPort}</port>
						<user>${glassfish.username}</user>
						<passwordfile>${glassfish.passwordfile}</passwordfile>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>