<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>com.teoware.refapp</groupId>
		<artifactId>refapp.database</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	
	<artifactId>refapp.database.derby</artifactId>
	<packaging>jar</packaging>
	<name>rafapp.database.derby</name>
	<description>Derby database scripts</description>
	
	<!-- PROPERTIES -->
	<properties>
		<derby.host>localhost</derby.host>
		<derby.port>1527</derby.port>
		<derby.database>refapp</derby.database>
		<derby.username>refapp</derby.username>
		<derby.password>abcd1234</derby.password>
	</properties>
	
	<!-- REPOSITORIES -->
	<repositories>
	</repositories>
	
	<!-- PLUGIN REPOSITORIES -->
	<pluginRepositories>
	</pluginRepositories>
	
	<!-- DEPENDENCIES -->
	<dependencies>
	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
			</plugin>
			
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>sql-maven-plugin</artifactId>
				
				<dependencies>
					<dependency>
						<groupId>org.apache.derby</groupId>
						<artifactId>derbyclient</artifactId>
						<version>${version.derbyclient}</version>
					</dependency>
				</dependencies>
				
				<!-- common configuration shared by all executions -->
				<configuration>
					<driver>org.apache.derby.jdbc.ClientDriver</driver>
					<url>jdbc:derby://${derby.host}:${derby.port}/${derby.database}</url>
					<username>${derby.username}</username>
					<password>${derby.password}</password>
				</configuration>

				<executions>
					<!-- Clean all objects -->
					<execution>
						<id>clean-all</id>
						<phase>compile</phase>
						<goals>
							<goal>execute</goal>
						</goals>
						<configuration>
							<autocommit>true</autocommit>
							<orderFile>ascending</orderFile>
							<fileset>
								<basedir>${project.basedir}/src/main/sql/clean</basedir>
								<includes>
									<include>**/*.sql</include>
								</includes>
							</fileset>
							<onError>continue</onError>
						</configuration>
					</execution>
					
					<!-- Create all tables -->
					<execution>
						<id>create-tables</id>
						<phase>compile</phase>
						<goals>
							<goal>execute</goal>
						</goals>
						<configuration>
							<autocommit>true</autocommit>
							<orderFile>ascending</orderFile>
							<fileset>
								<basedir>${project.basedir}/src/main/sql/tables</basedir>
								<includes>
									<include>**/*.sql</include>
								</includes>
							</fileset>
							<onError>abort</onError>
						</configuration>
					</execution>
					
					<!-- Create all indexes -->
					<execution>
						<id>create-indexes</id>
						<phase>compile</phase>
						<goals>
							<goal>execute</goal>
						</goals>
						<configuration>
							<autocommit>true</autocommit>
							<orderFile>ascending</orderFile>
							<fileset>
								<basedir>${project.basedir}/src/main/sql/indexes</basedir>
								<includes>
									<include>**/*.sql</include>
								</includes>
							</fileset>
							<onError>abort</onError>
						</configuration>
					</execution>
					
					<!-- Create all triggers -->
					<execution>
						<id>create-triggers</id>
						<phase>compile</phase>
						<goals>
							<goal>execute</goal>
						</goals>
						<configuration>
							<autocommit>true</autocommit>
							<orderFile>ascending</orderFile>
							<fileset>
								<basedir>${project.basedir}/src/main/sql/triggers</basedir>
								<includes>
									<include>**/*.sql</include>
								</includes>
							</fileset>
							<onError>abort</onError>
						</configuration>
					</execution>
					
					<!-- Create all views -->
					<execution>
						<id>create-views</id>
						<phase>compile</phase>
						<goals>
							<goal>execute</goal>
						</goals>
						<configuration>
							<autocommit>true</autocommit>
							<orderFile>ascending</orderFile>
							<fileset>
								<basedir>${project.basedir}/src/main/sql/views</basedir>
								<includes>
									<include>**/*.sql</include>
								</includes>
							</fileset>
							<onError>abort</onError>
						</configuration>
					</execution>
					
					<!-- Insert all data -->
					<execution>
						<id>insert-data</id>
						<phase>compile</phase>
						<goals>
							<goal>execute</goal>
						</goals>
						<configuration>
							<autocommit>true</autocommit>
							<orderFile>ascending</orderFile>
							<fileset>
								<basedir>${project.basedir}/src/main/sql/data</basedir>
								<includes>
									<include>**/*.sql</include>
								</includes>
							</fileset>
							<onError>abort</onError>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>